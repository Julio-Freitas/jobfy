<!-- HEADER -->
<%- include('header') %>

<div class="container">
    <h2>Editar vagas <a href="/admin/vagas">Vagas</a> </h2>

    <form method="POST">
        
        <label>Título:</label>
        <input type="text" name="titulo" id="" value="<%- vaga.titulo %>">

        <label>Descrição:</label>
        <textarea name="descricao" id=""><%- vaga.descricao %></textarea>

        <label>Categoria:</label>
        <select name="categoria" id="">
            <% categorias.forEach (categoria =>{%>
                <option value='<%-categoria.id%>' <% if(categoria.id === vaga.categoria){ %> selected <% } %>  > <%-categoria.categoria%></option>
            <%}) %>
        </select>
        <button type="submit">Salvar Vaga</button>
    </form>
</div> <!-- FIM CONTAINER-->

<!--  FOOTER -->
<%- include('footer') %>